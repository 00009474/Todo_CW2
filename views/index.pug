extends layout 

block content
  .row
    .col-md-4 
      .card 
        .card-header
          h3 Add new note
        .card-body 
          form(action="/add", method="POST")
            .form-group.mb-3
              label(for='todo') Add your note:
              input.form-control#todo(type='text', name="title")
            input(type="submit", value="Add", href='/todo/create').btn.btn-outline-success.btn-lg
    .col-md-8 
      table.table.table-dark.table-striped
        thead
          tr
            th(scope='col') Id
            th(scope='col') Note:
            th(scope='col') Edit
            th(scope='col') Delete
        tbody
          tr
            th(scope='row') 1
            td
            td
              button.btn.btn-info.btn-lg 
                i.fas.fa-pen-square
            td
              button.btn.btn-danger.btn-lg 
                i.far.fa-trash-alt

